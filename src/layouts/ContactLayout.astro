---
const base = import.meta.env.BASE_URL;
---
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
<script src="../scripts/contact.js"></script>
<section id="form-section">
	<form id="contact-form">
		<h2>Formulaire de contact</h2>
		<br>
		<p>Uniquement pour tout contact professionnel.</p>
		<br>
		<br>
		<div class="form-item">
			<label for="name">Nom</label>
			<input type="text" id="name" name="name" maxlength="25" required>
		</div>
		<div class="form-item">
			<label for="email">Email</label>
			<input type="email" id="email" name="email" maxlength="30" required>
		</div>
		<div class="form-item">
			<label for="subject">Sujet</label>
			<input type="text" id="subject" name="subject" maxlength="120" required>
		</div>
		<div class="form-item">
			<label for="message">Message</label>
			<textarea id="message" name="message" rows="4" required></textarea>
		</div>
		<button type="submit"><p>Envoyer le mail</p></button>
	</form>
</section>